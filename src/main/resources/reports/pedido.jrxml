            </staticText>
            <textField>
                <reportElement x="0" y="40" width="200" height="20"/>
                <textFieldExpression><![CDATA["NRO: " + $F{numeroPedido}]]></textFieldExpression>
            </textField>
            <textField pattern="dd/MM/yyyy HH:mm">
                <reportElement x="220" y="40" width="200" height="20"/>
                <textFieldExpression><![CDATA[$F{fechaPedido}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <detail>
        <band height="60">
            <textField>
                <reportElement x="0" y="0" width="300" height="20"/>
                <textFieldExpression><![CDATA["Cliente: " + ($F{usuario} != null ? $F{usuario}.getNombre() + " " + $F{usuario}.getApellido() : "N/A")]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="22" width="300" height="20"/>
                <textFieldExpression><![CDATA["Total: S/ " + $F{total}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <pageFooter>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="515" height="20"/>
                <text><![CDATA[Gracias por comprar en EcoVivaShop]]></text>
            </staticText>
        </band>
    </pageFooter>
</jasperReport>
