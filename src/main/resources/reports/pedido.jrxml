<?xml version="1.0" encoding="UTF-8"?>
<!-- Minimal JRXML for Pedido POC -->
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="pedido" pageWidth="595" pageHeight="842" columnWidth="515" leftMargin="40" rightMargin="40" topMargin="50" bottomMargin="50" uuid="a6c6b2f3-2f9c-4b3b-9a8d-1a2b3c4d5e6f">
    <property name="ireport.encoding" value="UTF-8"/>
    <field name="idPedido" class="java.lang.Integer"/>
    <field name="numeroPedido" class="java.lang.String"/>
    <field name="fechaPedido" class="java.time.LocalDateTime"/>
    <field name="total" class="java.math.BigDecimal"/>
    <field name="usuario" class="com.ecovivashop.entity.Usuario"/>

    <title>
        <band height="80">
            <staticText>
                <reportElement x="0" y="0" width="515" height="30"/>
